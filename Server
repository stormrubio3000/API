var http = require('http');
var url = require('url');

http.createServer(function (req, res) {
  const { headers, method, url } = req;
  res.writeHead(200, {'Content-Type': 'text/html'});
  console.log(url);                                                                                                     
  
  
  const WolframAlphaAPI = require('wolfram-alpha-api');
  const waApi = WolframAlphaAPI('AH4R6V-3QUP7RQ6UU');

  API(url);
  function API(url){
    if(url !=="/"){
      res.end('<html><body><h1>Hello, World!</h1></body></html>');
      
    }
    else{
      waApi.getFull('use induction to show that 8^n-3^n is divisible by 12 for n>0').then((queryresult) => {
      const pods = queryresult.pods;
      const output = pods.map((pod) => {
      const subpodContent = pod.subpods.map(subpod =>
        `  <img src="${subpod.img.src}" alt="${subpod.img.alt}">`
      ).join('\n');
      return `<h2>${pod.title}</h2>\n${subpodContent}`;
      }).join('\n');
    res.end(output);
  }).catch(console.error);
    }
  }
  
  
//https://api.wolframalpha.com/v2/query?input=use+induction+to+show+that+8%5En-3%5En+is+divisible+by+12+for+n%3E0&format=html&output=JSON&appid=AH4R6V-3QUP7RQ6UU

}).listen(8080);
